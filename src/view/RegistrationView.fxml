         <children>
            <Label text="Already have an account? " textFill="#d3cccc" />
            <Label fx:id="loginLabel" onMouseClicked="#changeLoginView" text="Log in" textFill="#bc3434">
               <HBox.margin>
                  <Insets left="7.0" />
               </HBox.margin>
            </Label>
         </children>
      </HBox>
   </children>
</VBox>
